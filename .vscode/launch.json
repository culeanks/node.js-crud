{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node Inspector",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/src/index.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "env": {
                "TS_NODE_PROJECT": "${workspaceRoot}/tsconfig.json"
            },
            // comment if you dont have nvm
            //"runtimeExecutable": "/Users/bbanerjee020/.nvm/versions/node/v10.13.0/bin/node"
        }
    ]
}